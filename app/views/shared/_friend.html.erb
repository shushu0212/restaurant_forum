<% if user != current_user %>
  <% if current_user.friending?(user) %>
    <!-- 會用 DELETE 動作導向 http://localhost:3000/friendships/{user.id} -->
    <%= link_to 'Unfriend', friendship_path(user), method: :delete, class: "btn btn-link"%>
  <% else %>
    <!-- 會用 POST 動作導向 http://localhost:3000/friendships?friending_id={user.id} -->
    <%= link_to 'Friend', friendships_path(friending_id: user), method: :post, class: "btn btn-default"%>
  <% end %>
<% end %>
