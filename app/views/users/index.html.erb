<div class="container">
  <% @users.each do |user| %>
    <li>
      <%= user.email.split('@').first %>
      <!-- 會用 POST 動作導向  http://localhost:3000/followships?following_id={user.id} -->
      <%= link_to "Follow", followships_path(following_id: user), method: :post %>
      <!-- 會用 DELETE 動作導向 http://localhost:3000/followships/{user.id} -->
      <%= link_to 'Unfollow', followship_path(user), method: :delete %>
    </li>
  <% end %>
</div>